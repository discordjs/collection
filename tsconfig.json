{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"pretty": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"sourceMap": false,
		"strict": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "esnext"
	},
	"include": [
		"src/**/*",
	]
}
